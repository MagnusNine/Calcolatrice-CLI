using System;

class calcolatrice
{
    static void Continuo(double x)
    {
        Console.WriteLine("Vuoi continuare? [si/no]");
        string s = Console.ReadLine();
        if (s == "si")
        {
            Operazioni(x);
        }
        else if (s == "no")
        {
            Console.WriteLine("programma finito");
            return;
        }
    }
    static void Addizione(double x)
    {
        Console.WriteLine("Inserire numero da sommare");
        int numeri = Convert.ToInt32(Console.ReadLine());
        x = x + numeri;
        Console.WriteLine(x);
        Continuo(x);
    }
    static void Sottrazione(double x)
    {
        Console.WriteLine("inserire numero da sottrarre");
        double num = Convert.ToDouble(Console.ReadLine());
        x = x - num;
        Console.WriteLine(x);
        Continuo(x);

    }
    static void Moltiplicazione(double x)
    {

        Console.WriteLine("Inserire numero da moltiplicare");
        double num = Convert.ToDouble(Console.ReadLine());
        x = x * num;
        Console.WriteLine(x);
        Continuo(x);

    }
    static void Divisione(double x)
    {
        double a = 0;
        Console.WriteLine("inseire divisore");
        double divisore = Convert.ToInt32(Console.ReadLine());
        if (divisore == 0)
        {
            while (a == 0)
            {
                Console.WriteLine("numero non valido, inserire un'altro numero");
                a = Convert.ToDouble(Console.ReadLine());
                divisore = a;
            }
            x = x / divisore;
            Console.WriteLine(x);
            Continuo(x);
        }
        else
        {
            x = x / divisore;
            Console.WriteLine(x);
            Continuo(x);
        }
    }
    static void Potenza(double x)
        {
            Console.WriteLine("Scegliere l'esponenete ");
            int espo = Convert.ToInt32(Console.ReadLine());
            for (int i = 1; i < espo; i++)
            {
                x *= x;
                Console.WriteLine(x);
            }

            Continuo(x);
        }
        static void Radice(double x)
        {
            Console.WriteLine(Math.Sqrt(x));
            Continuo(x);
        }
        static void Operazioni(double x)
        {
            Console.WriteLine("Scegliere un numero da 1 a 6");
            Console.WriteLine("1 Addizione");
            Console.WriteLine("2 Sottrazione");
            Console.WriteLine("3 Moltiplicazione");
            Console.WriteLine("4 Divisione");
            Console.WriteLine("5 Potenza");
            Console.WriteLine("6 Radice");
            int menu = Convert.ToInt32(Console.ReadLine());
            switch (menu)
            {
                case 1:
                    Addizione(x);
                    break;
                case 2:
                    Sottrazione(x);
                    break;
                case 3:
                    Moltiplicazione(x);
                    break;
                case 4:
                    Divisione(x);
                    break;
                case 5:
                    Potenza(x);
                    break;
                case 6:
                    Radice(x);
                    break;
            }
        }
        static void Main()
        {
            Console.WriteLine("Inserire primo numero");
            double x = Convert.ToDouble(Console.ReadLine());
            Operazioni(x);
        }
    }
